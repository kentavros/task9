<?php
class HtmlHelper
{
    public static function table($tr, $td) 
    {
        global $res .='<table>';

        for($i=1; $i==$tr; $i++)
        {
            $res .='<tr>';
                
                for($n=1; $n==$td; $n++)
                {
                    $res .='<td></td><td></td>';
                }
                
            $res .='</tr>'; 
        }
        $res .='</table>';
        return $res;
    }
}
?>
